#
# bspwm hotkeys
#

alt + q
    bspc window -c

alt + t
    bspc desktop -l next

alt + b
    bspc desktop -B

alt + {s,f}
    bspc window -t {floating,fullscreen}

alt + {grave,Tab}
    bspc {window,desktop} -f last

alt + space
    bspc cycle_layout

alt + apostrophe
    bspc window -s last

alt + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

alt + y
    bspc window -w last.manual

alt + m
    bspc window -s biggest

alt + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }{comma,period}
    bspc {monitor -f,window -m} {HDMI1,HDMI2}

alt + bracket{left,right}
    bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

alt + super + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

alt + super + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

alt + {_,shift + }{1,2,3,4,5,6}
    bspc {desktop -f,window -d} {One,Two,Three,Four,Five,Six}

~button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u

#
# media keys
#

# brightness
F{1,2}
  xbacklight -{dec,inc} 15

# cmus
F{7,8,9}
  cmus-remote -{r,u,n}

# volume
alt + Escape
  mixerctl -qt outputs.master.mute

alt + F1
  mixerctl -q outputs.master=-10,-10

alt + F2
  mixerctl -q outputs.master=+10,+10

#
# wm independent hotkeys
#

alt + Return
    urxvtc

alt + r
    dmenu_run

alt + d
    xombrero

alt + e
    urxvtc -e ranger

alt + F{9,10,11}
    cmus-remote -{r,u,n}

ctrl + shift + l
    xlock -dpmssuspend 1

# Reload sxhkd config
alt + shift + Escape
    pkill -USR1 -x sxhkd
